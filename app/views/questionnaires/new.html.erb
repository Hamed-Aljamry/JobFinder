<%= simple_form_for([@user, @questionnaire]) do |f| %>
  <%= f.input :industry, collection: ['Technology', 'Healthcare', 'Finance'], as: :radio_buttons %>
  <%= f.input :role, collection: ['Management', 'Technical', 'Creative'], as: :radio_buttons %>
  <%= f.input :company_size, collection: ['Startup', 'Mid-sized', 'Large Corporation'], as: :radio_buttons %>
  <%= f.input :work_location, collection: ['Remote', 'On-site', 'Hybrid'], as: :radio_buttons %>
  <%= f.input :salary_range, collection: ['<$50,000', '$50,000 - $100,000', '>$100,000'], as: :radio_buttons %>

  <%= f.button :submit, "Submit" %>
<% end %>
